


/*设置行内块*/

.plan-card{
  width: 100%;
  height: 110rpx;
  border: 2px solid #ffffff;
  border-radius: 5px;
  background-color: #ffffff;
  box-shadow: 4px 1px 1px #cccccc;
  position: relative;
  margin-left: 10rpx;
  display: flex;
  
}
.image-class{
display: flex;
justify-content: center;
align-items: center;
padding-top: 10rpx;
flex: 1;
width: 100%;
height: 90rpx;
}
.itemContent{
margin: 5rpx;
height: 70rpx;
display: flex;
align-items: center;
padding: 20rpx 20rpx;
flex: 7;
border-left: 1rpx solid white;
}
.finished{
  text-decoration: line-through;
  color: #444444;
  font-style: italic;
}